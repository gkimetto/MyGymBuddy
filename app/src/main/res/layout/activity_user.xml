<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kim8o.g.mygymbuddy.User"
   >

    <ImageView
        android:id="@+id/ivw_profile_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/yogarm"
        />
    <TextView
        android:textSize="30sp"
        android:id="@+id/txt_profile_builder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Profile Builder"
        android:layout_below="@id/ivw_profile_pic"
        android:layout_centerInParent="true"

        />


    <EditText
        android:id="@+id/etxt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_below="@id/txt_profile_builder"
        android:layout_marginTop="18dp"
        android:ems="10"/>

    <EditText
        android:id="@+id/etxt_password1"
        android:layout_below="@id/etxt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="18dp"
        android:ems="10"
        />
    <EditText
        android:id="@+id/etxt_password2"
        android:layout_below="@id/etxt_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="18dp"
        android:ems="10"
        />

    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Gender"
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_below="@id/etxt_password2"
        />
    <Spinner
        android:id="@+id/snr_gender"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etxt_password2"
        android:layout_toRightOf="@id/txt_gender"
        android:layout_alignTop="@+id/txt_gender"
        android:textSize="40dp"
        android:layout_marginTop="18dp"
        android:entries="@array/user_gender"
        android:layout_weight="1"
        />
    <TextView
        android:textSize="20sp"
        android:id="@+id/txt_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/snr_gender"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="50sp"
        android:text="Age"
        android:layout_weight="1"
        android:layout_below="@id/etxt_password2"
        />
    <EditText
        android:id="@+id/etxt_age"
        android:textSize="20sp"
        android:layout_below="@id/etxt_password2"
        android:layout_toRightOf="@id/txt_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" 18 "
        android:layout_marginTop="18dp"
        android:layout_marginLeft="50sp"
        android:layout_weight="1"
        android:ems="3"/>

    <TextView
        android:textSize="20sp"
        android:id="@+id/txt_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_gender"
        android:layout_marginTop="36dp"
        android:text=" Goals "
        android:layout_weight="1"
        />
    <CheckBox
        android:id="@+id/chkbx_weight_loss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Loss"
        android:layout_below="@id/txt_goals"
        android:textAppearance="?android:textAppearanceMedium"
        />
    <CheckBox
        android:id="@+id/chkbx_cardio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardio Fitness"
        android:layout_below="@id/chkbx_weight_loss"
        android:textAppearance="?android:textAppearanceMedium"
        />
    <CheckBox
        android:id="@+id/chkbx_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strength"
        android:layout_below="@id/chkbx_cardio"
        android:textAppearance="?android:textAppearanceMedium"
        />

    <Button
        android:id="@+id/btn_create_equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Continue"
        android:onClick="onClickContinue"/>

    <Button
        android:id="@+id/btn_back_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Back"
        android:onClick="onClickBack"/>
</RelativeLayout>
