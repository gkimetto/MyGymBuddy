<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/txtMachineName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txtExcerciseSteps"/>

    <ImageView
        android:id="@+id/imgGymMachine"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        />

    <Button
        android:id="@+id/btnStartWorkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:color="#3ec95c"
        android:layout_alignParentLeft="true"
        android:text="Start Workout"
        android:onClick="onClickStartWorkout"/>
    <FrameLayout
        android:id="@+id/gym_data_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
